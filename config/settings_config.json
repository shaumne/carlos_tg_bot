{
  "trading": {
    "title": "üí∞ Trading Settings",
    "description": "Configure trading parameters and risk management",
    "settings": {
      "trade_amount": {
        "title": "Trade Amount (USDT)",
        "description": "Amount in USDT to use per trade",
        "type": "number",
        "default": 10.0,
        "min": 1.0,
        "max": 10000.0,
        "step": 1.0,
        "restart_required": false,
        "validation": "Must be between 1 and 10000 USDT"
      },
      "max_positions": {
        "title": "Max Open Positions",
        "description": "Maximum number of open positions at once",
        "type": "integer",
        "default": 5,
        "min": 1,
        "max": 20,
        "step": 1,
        "restart_required": false,
        "validation": "Must be between 1 and 20"
      },
      "risk_per_trade": {
        "title": "Risk Per Trade (%)",
        "description": "Percentage of portfolio to risk per trade",
        "type": "number",
        "default": 2.0,
        "min": 0.1,
        "max": 10.0,
        "step": 0.1,
        "restart_required": false,
        "validation": "Must be between 0.1% and 10%"
      },
      "enable_auto_trading": {
        "title": "Enable Auto Trading",
        "description": "Automatically execute trades based on signals",
        "type": "boolean",
        "default": false,
        "restart_required": false,
        "validation": "Enable/disable automatic trade execution"
      },
      "stop_loss_percentage": {
        "title": "Default Stop Loss (%)",
        "description": "Default stop loss percentage below entry price",
        "type": "number",
        "default": 5.0,
        "min": 1.0,
        "max": 20.0,
        "step": 0.5,
        "restart_required": false,
        "validation": "Must be between 1% and 20%"
      },
      "take_profit_percentage": {
        "title": "Default Take Profit (%)",
        "description": "Default take profit percentage above entry price",
        "type": "number",
        "default": 10.0,
        "min": 2.0,
        "max": 50.0,
        "step": 1.0,
        "restart_required": false,
        "validation": "Must be between 2% and 50%"
      }
    }
  },
