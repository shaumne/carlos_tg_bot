# Telegram Trading Bot Environment Configuration
# Copy this file to .env and fill in your actual values

# ============ TELEGRAM BOT CONFIGURATION ============
# Required: Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Required: Your Telegram chat ID (use @userinfobot to get your ID)
TELEGRAM_CHAT_ID=your_chat_id_here

# Optional: Comma-separated list of authorized user IDs
TELEGRAM_AUTHORIZED_USERS=123456789,987654321

# Optional: Comma-separated list of admin user IDs (subset of authorized users)
TELEGRAM_ADMIN_USERS=123456789

# Optional: Webhook configuration (leave empty for polling)
TELEGRAM_WEBHOOK_URL=
TELEGRAM_WEBHOOK_PORT=8443

# ============ CRYPTO EXCHANGE CONFIGURATION ============
# Required: Get from Crypto.com Exchange API settings
CRYPTO_API_KEY=your_api_key_here
CRYPTO_API_SECRET=your_api_secret_here

# Optional: API endpoints (default values shown)
CRYPTO_BASE_URL=https://api.crypto.com/exchange/v1/
CRYPTO_ACCOUNT_URL=https://api.crypto.com/v2/
CRYPTO_TIMEOUT=30
CRYPTO_MAX_RETRIES=3
CRYPTO_RATE_LIMIT=10

# ============ TRADING CONFIGURATION ============
# Trade amount in USDT
TRADE_AMOUNT=10.0

# Maximum concurrent positions
MAX_POSITIONS=5

# Risk per trade as percentage
RISK_PER_TRADE=2.0

# Enable/disable automatic trading (true/false)
ENABLE_AUTO_TRADING=false

# Enable paper trading for testing (true/false)
ENABLE_PAPER_TRADING=true

# Minimum balance required in USDT
MIN_BALANCE_REQUIRED=15.0

# ============ TECHNICAL ANALYSIS CONFIGURATION ============
# ATR (Average True Range) settings
ATR_PERIOD=14
ATR_MULTIPLIER=2.0

# RSI (Relative Strength Index) settings
RSI_PERIOD=14
RSI_OVERSOLD=30.0
RSI_OVERBOUGHT=70.0

# Moving Average settings
MA_PERIOD=20
EMA_PERIOD=12

# ============ RISK MANAGEMENT CONFIGURATION ============
# Maximum drawdown percentage
MAX_DRAWDOWN=10.0

# Default stop loss percentage
STOP_LOSS_PERCENTAGE=5.0

# Default take profit percentage
TAKE_PROFIT_PERCENTAGE=10.0

# Enable trailing stop (true/false)
TRAILING_STOP_ENABLED=true

# Trailing stop percentage
TRAILING_STOP_PERCENTAGE=3.0

# ============ MONITORING CONFIGURATION ============
# Check intervals in seconds
SIGNAL_CHECK_INTERVAL=30
POSITION_CHECK_INTERVAL=60
PRICE_UPDATE_INTERVAL=10
HEALTH_CHECK_INTERVAL=300

# Notification settings (true/false)
NOTIFY_SIGNALS=true
NOTIFY_TRADES=true
NOTIFY_ERRORS=true
NOTIFY_SYSTEM_EVENTS=true

# ============ LOGGING CONFIGURATION ============
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/trading_bot.log

# Log file maximum size in bytes (10MB default)
LOG_MAX_SIZE=10485760

# Number of backup log files to keep
LOG_BACKUP_COUNT=5

# ============ DATABASE CONFIGURATION ============
# Database file path
DB_PATH=data/trading_bot.db

# Enable automatic backups (true/false)
BACKUP_ENABLED=true

# Backup interval in seconds (3600 = 1 hour)
BACKUP_INTERVAL=3600

# Number of days to keep backups
BACKUP_RETENTION_DAYS=30

# Enable automatic vacuum (true/false)
AUTO_VACUUM=true

# Database connection timeout in seconds
CONNECTION_TIMEOUT=30

# ============ SECURITY CONFIGURATION ============
# Optional: Encryption key for sensitive data
ENCRYPTION_KEY=

# Session timeout in seconds
SESSION_TIMEOUT=3600

# Maximum failed login attempts
MAX_FAILED_ATTEMPTS=5

# Rate limiting settings
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=30

# Enable audit logging (true/false)
ENABLE_AUDIT_LOG=true

# Optional: Comma-separated list of allowed IP addresses (empty = all IPs allowed)
ALLOWED_IPS=

# ============ METRICS AND MONITORING ============
# Enable metrics collection (true/false)
ENABLE_METRICS=true

# Metrics collection interval in seconds
METRICS_INTERVAL=60

# ============ DEVELOPMENT/DEBUG SETTINGS ============
# Enable debug mode (more verbose logging)
DEBUG=false

# Enable test mode (prevents real trades)
TEST_MODE=false

# Mock exchange API for testing (true/false)
MOCK_EXCHANGE=false
